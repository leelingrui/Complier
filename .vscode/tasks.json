{
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}/build"
    },
    "tasks": [
        {
            "label": "CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "MinGW Makefiles",
                ".."
            ]
        },
        {
            "label": "MinGW build",
            "type": "shell",
            "command": "mingw32-make",
            "args": [
                "-j24"
            ],
            "group": "build",
            "dependsOn": [
                "cmake"
            ]
        },
    ]
}